{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="coll mx-auto">
            <h4 class="my-3 text-secondary">Categories:</h4>
                {{ knp_pagination_render(pagination) }}
                        {# {% include "include/pagination.html.twig" %} #}
            <table class="table table-hover text-center">
                <thead class="bg-secondary text-white">
                    <tr>
                        <th scope="col">name</th>
                        <th scope="col">subname</th>
                        <th scope="col">book</th>
                    </tr>
                </thead>
                <tbody>
                    {% for category in pagination %}
                    <tr>
                        <td><a href="{{ path('show_category', {id: category.id}) }}" class="nav-link text-dark">{{ category.name }}</td>
                        <td><a href="#" class="nav-link text-dark">{{ category.subname }}</td>
                        <td>
                            <a class="nav-link text-dark dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Dropdown
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            {% for book in category.books %}
                                <a class="dropdown-item" href="{{ path('show_book', {id: book.id}) }}">{{ book.title }}</a>
                                {% endfor %}
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
