{% extends 'main/base.html.twig' %}

{% block title %}Create new message{% endblock %}

{% block body %}

<div class="container">
    <div class="row d-flex justify-content-center py-3">
        <div class="col-6">

        {{form_start(form)}}

            {{ form_row(form.email)}}
            {{ form_row(form.name)}}
            {{ form_row(form.message)}}
            {{ form_row(form.phone)}}
            {{ form_row(form.captcha)}}
            {{ form_row(form.delivered, {
                    'label_attr': {'style': 'display:none'},
                    'attr': {'style': 'display:none'}
                    }
                )}}

        <input class="form-control btn btn-outline-danger mt-3" type='submit' values='Edit'>

        {{form_end(form)}}
        
        </div>
    </div>
</div>

{% endblock %}