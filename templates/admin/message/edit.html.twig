{% extends 'admin/layouts/admin_page.html.twig' %}

{% block body %}

<div class="container">
    <div class="row d-flex justify-content-center py-3">
        <div class="col-6">

        {{form_start(form)}}

            {{ form_row(form.email)}}
            {{ form_row(form.name)}}
